<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/diagnoses_button_press_center" android:centerX="50%" android:centerY="50%" android:endColor="@color/diagnoses_button_press_end" android:startColor="@color/diagnoses_button_press_start" android:type="linear" />
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="@color/diagnoses_button_border" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/diagnoses_button_press_center" android:centerX="50%" android:centerY="50%" android:endColor="@color/diagnoses_button_press_end" android:startColor="@color/diagnoses_button_press_start" android:type="linear" />
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="@color/diagnoses_button_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient android:angle="270"
                android:centerColor="@color/diagnoses_button_center"
                android:centerX="50%" android:centerY="50%"
                android:endColor="@color/diagnoses_button_end"
                android:startColor="@color/diagnoses_button_start"
                android:type="linear" />
            <stroke android:width="3dp" android:color="@color/diagnoses_button_border" />
        </shape>
    </item>

</selector>
